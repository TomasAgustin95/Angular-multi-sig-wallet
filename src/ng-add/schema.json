{
  "$schema": "http://json-schema.org/schema",
  "$id": "options",
  "title": "Angualr on Chain",
  "type": "object",
  "properties": {
    "project": {
      "description": "Project Path",
      "type": "string",
      "default": "default",
      "x-prompt": "What is your Project name"
    },
    "configuration": {
      "type": "string",
      "description": "description",
      "uniqueItems": true,
      "default":"helloWorld",
      "enum": ["helloWorld","debugContract"],
      "x-prompt": {
        "message": "Which dapp would you like to start with?",
        "type": "list",
        "multiselect": false,
        "items": [
          {"value":"helloWorld","label":"Hello Dapp World"},
          {"value":"debugContract","label":"Debug and Contract"}
        ]
      }
  },
  "skipInstall": {
    "description": "skipInstall",
    "type": "boolean",
    "default": "false"
  },
  "alreadyInstalled": {
    "description": "skipInstall",
    "type": "boolean",
    "default": "false"
  }
}
}