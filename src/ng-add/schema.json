{
  "$schema": "http://json-schema.org/schema",
  "$id": "options",
  "title": "Angular Web3",
  "type": "object",
  "properties": {

  "demoToInstall": {
    "description": "Demo App",
    "type": "boolean",
    "default": false
  },
  "dappDemo": {
      "type": "string",
      "description": "description",
      "uniqueItems": true,
      "default":"minimalContract",
      "enum": ["minimalContract", "helloWorldContract","debugContract", "nftContract", "lensProtocol"]
  },
  "dappServices": {
    "description": "Dapp Services to be included",
    "type":"array",
    "items": {
      "type":"string",
      "enum": ["subgraph","ipfs"]
    },
    "default": []
  },
  "services": {
    "description": "Services Infrastructrue to install",
    "type":"array",
    "items": {
      "type":"string",
      "enum": ["graph-node"]
    },
    "default": []
  },
  "skipInstall": {
    "description": "skipInstall",
    "type": "boolean",
    "default": false
  },
  "test": {
    "description": "Am i in test?",
    "type": "boolean",
    "default": false
  },
  "alreadyInstalled": {
    "description": "alreadyInstalled",
    "type": "boolean",
    "default": false
  }
}
}