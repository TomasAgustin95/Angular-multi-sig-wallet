{
  "$schema": "http://json-schema.org/schema",
  "$id": "options",
  "title": "Angualr on Chain",
  "type": "object",
  "properties": {
    "project": {
      "description": "Project Path",
      "type": "string",
      "default": "default",
      "x-prompt": "What is your Project name"
    },
    "configuration": {
      "type": "string",
      "description": "description",
      "uniqueItems": true,
      "default":"hello",
      "enum": ["hello","debug","nft"],
      "x-prompt": {
        "message": "Which dapp would you like to start with?",
        "type": "list",
        "multiselect": false,
        "items": [
          {"value":"hello","label":"Hello Dapp World"}
        ]
      },
      "required": [
        "configuration"
      ]
    }
  }
}